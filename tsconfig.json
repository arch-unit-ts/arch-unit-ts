{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "dist/main.js",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/main/*"],
      "@fake-src/*": ["src/test/fake-src/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/fixture.config.ts"]
}
